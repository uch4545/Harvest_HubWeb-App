<script>
    let currentCropData = {
        id: 0,
        name: '',
        rate: 0,
        unit: ''
    };

    function openBuyNowModal(cropId, cropName, pricePerUnit, unit) {
        currentCropData = {
            id: cropId,
            name: cropName,
            rate: pricePerUnit,
            unit: unit
        };

        document.getElementById('modalCropId').value = cropId;
        document.getElementById('modalCropName').textContent = cropName;
        document.getElementById('modalCropRate').textContent = 'Rs. ' + pricePerUnit + ' / ' + unit;
        document.getElementById('displayRate').textContent = 'Rs. ' + pricePerUnit + ' / ' + unit;
        
        // Reset form
        document.getElementById('quantity').value = '';
        document.getElementById('quantityError').style.display = 'none';
        calculateTotal();
        
        document.getElementById('buyNowModal').style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function closeBuyNowModal() {
        document.getElementById('buyNowModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    function calculateTotal() {
        const quantity = parseFloat(document.getElementById('quantity').value) || 0;
        const rate = currentCropData.rate;
        const total = quantity * rate;
        
        // Update display
        document.getElementById('displayQuantity').textContent = quantity + ' kg';
        document.getElementById('displayTotal').textContent = 'Rs. ' + total.toLocaleString();
        
        // Validate minimum quantity
        const errorDiv = document.getElementById('quantityError');
        if (quantity > 0 && quantity < 200) {
            errorDiv.style.display = 'block';
        } else {
            errorDiv.style.display = 'none';
        }
    }

    // Form validation before submit
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('buyNowForm');
        if (form) {
            form.addEventListener('submit', function(e) {
                const quantity = parseFloat(document.getElementById('quantity').value) || 0;
                
                if (quantity < 200) {
                    e.preventDefault();
                    document.getElementById('quantityError').style.display = 'block';
                    document.getElementById('quantity').focus();
                    return false;
                }
                
                return true;
            });
        }
    });

    // Close modal when clicking outside
    document.addEventListener('click', function(e) {
        const modal = document.getElementById('buyNowModal');
        if (e.target === modal) {
            closeBuyNowModal();
        }
    });
    
    // Logout confirmation function
    function confirmLogout() {
        Swal.fire({
            title: 'Are you sure?',
            html: '<p style="margin: 10px 0;">کیا آپ لاگ آؤٹ کرنا چاہتے ہیں؟</p>',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc2626',
            cancelButtonColor: '#6b7280',
            confirmButtonText: 'Yes, Logout / ہاں',
            cancelButtonText: 'Cancel / منسوخ',
            customClass: {
                popup: 'swal-wide'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                // Show loading
                Swal.fire({
                    title: 'Logging out...',
                    html: '<p style="margin: 10px 0;">لاگ آؤٹ ہو رہا ہے...</p>',
                    allowOutsideClick: false,
                    allowEscapeKey: false,
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });
                
                // Submit logout form
                document.getElementById('logoutForm').submit();
            }
        });
    }

