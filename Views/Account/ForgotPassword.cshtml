@model string
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Forgot Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-50 min-h-screen flex items-center justify-center">
    <div class="bg-white shadow-xl rounded-xl p-8 w-full max-w-md">
        <h2 class="text-2xl font-bold text-center text-green-700 mb-6">Forgot Password</h2>
        <form asp-action="ForgotPassword" method="post">
            <label for="email" class="block mb-2 font-medium text-gray-700">Enter your email</label>
            <input type="email" name="email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" required placeholder="you@example.com" />
            <button type="submit" class="mt-4 w-full bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg font-semibold">Send OTP</button>
        </form>
    </div>
</body>
</html>
