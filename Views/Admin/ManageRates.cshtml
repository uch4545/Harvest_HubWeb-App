@model List<HarvestHub.WebApp.Models.MarketRate>
@{
    ViewData["Title"] = "Manage Market Rates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">ğŸ“ˆ Manage Market Rates</h1>
        <a asp-controller="MarketRates" asp-action="Create" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg transition">
            â• Add New Rate
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Crop Name</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Ø§Ø±Ø¯Ùˆ Ù†Ø§Ù…</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Rate (PKR)</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Unit</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Last Updated</th>
                    <th class="px-6 py-3 text-center text-sm font-semibold text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var rate in Model)
                    {
                        <tr class="border-t hover:bg-gray-50">
                            <td class="px-6 py-4 text-sm text-gray-800">@rate.CropName</td>
                            <td class="px-6 py-4 text-sm text-gray-800">@rate.CropNameUrdu</td>
                            <td class="px-6 py-4 text-sm font-semibold text-green-600">@rate.CurrentRate.ToString("N0")</td>
                            <td class="px-6 py-4 text-sm text-gray-600">@rate.Unit</td>
                            <td class="px-6 py-4 text-sm text-gray-600">@rate.LastUpdated.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            <td class="px-6 py-4 text-center">
                                <a asp-controller="MarketRates" asp-action="Edit" asp-route-id="@rate.Id" 
                                   class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-xs mr-2">
                                    âœï¸ Edit
                                </a>
                                <form asp-controller="MarketRates" asp-action="Delete" asp-route-id="@rate.Id" method="post" style="display:inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete this rate?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-xs">
                                        ğŸ—‘ï¸ Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                            No market rates found. Add the first one!
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
