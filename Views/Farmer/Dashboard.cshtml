@model HarvestHub.WebApp.Models.Farmer
@{
    ViewData["Title"] = "Farmer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-lg rounded-lg p-6 space-y-4">
    <h2 class="text-2xl font-bold text-green-700">Welcome, @Model.FullName!</h2>

    <div class="text-gray-800">
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>CNIC:</strong> @Model.CNIC</p>
    </div>

    <form asp-controller="Account" asp-action="Logout" method="post">
      
    </form>
   

</div>
