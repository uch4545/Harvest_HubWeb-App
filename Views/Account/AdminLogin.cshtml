@model HarvestHub.WebApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Admin Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - HarvestHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
        <!-- Logo / Title -->
        <div class="text-center mb-6">
            <img src="~/image/harvest/N__1_-removebg-preview.png" alt="HarvestHub" class="h-16 mx-auto mb-3" />
            <h1 class="text-2xl font-bold text-yellow-700">Admin Login</h1>
            <p class="text-gray-500 text-sm">Only authorized admins can access this panel</p>
        </div>

        <!-- Validation -->
        <div asp-validation-summary="All" class="text-red-600 text-sm mb-4"></div>

        <!-- Form -->
        <form asp-action="AdminLogin" method="post" class="space-y-5">
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Email" type="email" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-500" placeholder="admin@harvesthub.com" />
                <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Password" type="password" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-500" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
            </div>

            <div class="flex items-center justify-between">
                <label class="flex items-center text-sm text-gray-600">
                    <input asp-for="RememberMe" class="mr-2 rounded border-gray-300" />
                    Remember me
                </label>
                <a asp-action="ForgotPassword" asp-controller="Account" class="text-sm text-yellow-700 hover:underline">Forgot password?</a>
            </div>

            <button type="submit" class="w-full bg-yellow-700 hover:bg-yellow-800 text-white py-2 px-4 rounded-lg font-semibold transition duration-200">
                Sign In
            </button>
        </form>

        <!-- Footer -->
        <div class="text-center mt-6">
            <p class="text-xs text-gray-500">&copy; @DateTime.Now.Year HarvestHub. All rights reserved.</p>
        </div>
    </div>

</body>
</html>
