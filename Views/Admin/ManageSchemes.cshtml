@model List<HarvestHub.WebApp.Models.GovernmentScheme>
@{
    ViewData["Title"] = "Manage Government Schemes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">üèõÔ∏è Manage Government Schemes</h1>
        <a asp-controller="Schemes" asp-action="Create" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg transition">
            ‚ûï Add New Scheme
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Title</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Category</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Status</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Featured</th>
                    <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700">Created</th>
                    <th class="px-6 py-3 text-center text-sm font-semibold text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var scheme in Model)
                    {
                        <tr class="border-t hover:bg-gray-50">
                            <td class="px-6 py-4 text-sm text-gray-800">@scheme.Title</td>
                            <td class="px-6 py-4 text-sm text-gray-600">@scheme.Category</td>
                            <td class="px-6 py-4 text-sm">
                                @if (scheme.Status == "Active")
                                {
                                    <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs">‚úÖ Active</span>
                                }
                                else if (scheme.Status == "Upcoming")
                                {
                                    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">üîú Upcoming</span>
                                }
                                else
                                {
                                    <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded text-xs">‚è∏Ô∏è @scheme.Status</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-sm">
                                @if (scheme.IsFeatured)
                                {
                                    <span class="text-yellow-500">‚≠ê Featured</span>
                                }
                                else
                                {
                                    <span class="text-gray-400">-</span>
                                }
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600">@scheme.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            <td class="px-6 py-4 text-center">
                                <a asp-controller="Schemes" asp-action="Edit" asp-route-id="@scheme.Id" 
                                   class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-xs mr-2">
                                    ‚úèÔ∏è Edit
                                </a>
                                <form asp-controller="Schemes" asp-action="Delete" asp-route-id="@scheme.Id" method="post" style="display:inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete this scheme?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-xs">
                                        üóëÔ∏è Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                            No schemes found. Add the first one!
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
