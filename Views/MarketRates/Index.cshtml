@model IEnumerable<HarvestHub.WebApp.Models.MarketRate>

@{
    ViewData["Title"] = "Market Rates";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<style>
    body {
        background: linear-gradient(to right, #e0f7fa, #e8f5e9);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .market-container {
        max-width: 1200px;
        margin: 15px auto;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        padding: 30px;
    }

    h2 {
        color: #2e7d32;
        font-weight: 600;
        text-align: center;
        margin-bottom: 25px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    .btn-primary {
        background-color: #43a047;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2e7d32;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background-color: #43a047;
        color: white;
        font-size: 1.1em;
    }

    th, td {
        padding: 14px 20px;
        text-align: left;
    }

    tbody tr:nth-child(odd) {
        background-color: #f1f8e9;
    }

    tbody tr:nth-child(even) {
        background-color: #ffffff;
    }

    tbody tr:hover {
        background-color: #dcedc8;
        transition: 0.3s;
    }

    .update-btn-container {
        text-align: center;
        margin-bottom: 25px;
    }
</style>


<div class="market-container">
    <h2>🌾 Live Market Rates</h2>

    <div class="update-btn-container">
        <form method="post" asp-action="UpdateNow" asp-controller="MarketRates">
            <button type="submit" class="btn btn-primary">
                🔄 Run Update Now (Test)
            </button>
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Crop</th>
                <th>Rate (PKR)</th>
                <th>Last Updated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.CropName</td>
                    <td>@r.CurrentRate</td>
                    <td>@r.LastUpdated.ToLocalTime().ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
