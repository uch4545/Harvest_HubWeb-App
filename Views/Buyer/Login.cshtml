@{
    ViewData["Title"] = "Buyer Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Buyer Login - HarvestHub</title>
    
    <!-- Prevent browser caching to avoid back button issues -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', system-ui, sans-serif;
        }
        
        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            background: linear-gradient(135deg, rgba(7, 94, 84, 0.85), rgba(18, 140, 126, 0.85)),
                        url('https://images.unsplash.com/photo-1560493676-04071c5f467b?w=1920') center/cover no-repeat fixed;
        }
        
        .login-container {
            display: flex;
            max-width: 1000px;
            width: 100%;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 25px;
            overflow: hidden;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
        }
        
        .login-image {
            flex: 1;
            background: linear-gradient(135deg, rgba(7, 94, 84, 0.9), rgba(37, 211, 102, 0.8)),
                        url('https://images.unsplash.com/photo-1595855759920-86582396756a?w=800') center/cover;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 50px;
            color: white;
            text-align: center;
        }
        
        .login-image h1 {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 15px;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.3);
        }
        
        .login-image p {
            font-size: 1.1rem;
            opacity: 0.95;
            max-width: 300px;
            line-height: 1.6;
        }
        
        .login-image .logo-icon {
            font-size: 4rem;
            margin-bottom: 20px;
        }
        
        .login-form {
            flex: 1;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        .form-header {
            text-align: center;
            margin-bottom: 35px;
        }
        
        .form-header h2 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #075e54;
            margin-bottom: 8px;
        }
        
        .form-header p {
            color: #666;
            font-size: 0.95rem;
        }
        
        .form-header-urdu {
            direction: rtl;
            color: #888;
            font-size: 0.9rem;
            margin-top: 5px;
        }
        
        .form-group {
            margin-bottom: 22px;
        }
        
        .form-group label {
            display: block;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            font-size: 0.9rem;
        }
        
        .form-group input {
            width: 100%;
            padding: 14px 18px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s;
            outline: none;
        }
        
        .form-group input:focus {
            border-color: #128c7e;
            box-shadow: 0 0 0 4px rgba(18, 140, 126, 0.1);
        }
        
        .form-group input::placeholder {
            color: #aaa;
        }
        
        .forgot-link {
            text-align: right;
            margin-top: 8px;
        }
        
        .forgot-link a {
            color: #128c7e;
            font-size: 0.85rem;
            text-decoration: none;
            font-weight: 500;
        }
        
        .forgot-link a:hover {
            text-decoration: underline;
        }
        
        .submit-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #075e54, #128c7e);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(7, 94, 84, 0.3);
        }
        
        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(7, 94, 84, 0.4);
        }
        
        .register-link {
            text-align: center;
            margin-top: 25px;
            color: #666;
            font-size: 0.95rem;
        }
        
        .register-link a {
            color: #075e54;
            font-weight: 600;
            text-decoration: none;
        }
        
        .register-link a:hover {
            text-decoration: underline;
        }
        
        .info-message {
            background: #e8f5e9;
            border-left: 4px solid #4caf50;
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            color: #2e7d32;
            font-size: 0.9rem;
        }
        
        .error-message {
            background: #ffebee;
            border-left: 4px solid #f44336;
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            color: #c62828;
            font-size: 0.9rem;
        }
        
        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .login-container {
                flex-direction: column;
            }
            
            .login-image {
                padding: 30px;
            }
            
            .login-image h1 {
                font-size: 1.8rem;
            }
            
            .login-form {
                padding: 30px;
            }
        }
    
    /* Loading Overlay */
    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(7, 94, 84, 0.95);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        flex-direction: column;
        gap: 20px;
    }
    
    .loading-overlay.active {
        display: flex;
    }
    
    .spinner {
        width: 60px;
        height: 60px;
        border: 5px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }
    
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
    
    .loading-text {
        color: white;
        font-size: 1.2rem;
        font-weight: 600;
    }
</style>
</head>
<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
        <div class="loading-text">Logging in... / لاگ ان ہو رہا ہے...</div>
    </div>
    
    <div class="login-container">
        <!-- Left Side - Image & Branding -->
        <div class="login-image">
            <div class="logo-icon">🛒</div>
            <h1>HarvestHub</h1>
            <p>Buy fresh crops directly from farmers at the best prices</p>
            <p style="margin-top: 15px; font-size: 1rem; direction: rtl;">
                کسانوں سے براہ راست تازہ فصلیں خریدیں
            </p>
        </div>
        
        <!-- Right Side - Login Form -->
        <div class="login-form">
            <div class="form-header">
                <h2>🛒 Buyer Login</h2>
                <p>Login to browse and buy crops</p>
                <div class="form-header-urdu">فصلیں دیکھنے اور خریدنے کے لیے لاگ ان کریں</div>
            </div>
            
            @if (TempData["Info"] != null)
            {
                <div class="info-message">@TempData["Info"]</div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="error-message">@TempData["Error"]</div>
            }
            
            <form method="post" asp-action="LoginPost">
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <label>📧 Email / ای میل</label>
                    <input type="email" name="Email" required placeholder="buyer@example.com" />
                </div>
                
                <div class="form-group">
                    <label>🔒 Password / پاس ورڈ</label>
                    <input type="password" name="Password" required placeholder="Enter your password" />
                    <div class="forgot-link">
                        <a href="@Url.Action("ForgotPassword", "Account")">Forgot Password? / پاس ورڈ بھول گئے؟</a>
                    </div>
                </div>
                
                <button type="submit" class="submit-btn">
                    Login / لاگ ان
                </button>
            </form>
            
            <div class="register-link">
                Don't have an account? 
                <a href="@Url.Action("BuyerRegister", "Account")">Register here / یہاں رجسٹر کریں</a>
            </div>
        </div>
    </div>
    
    <script>
        // Show loader on form submission
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.querySelector('form');
            const loadingOverlay = document.getElementById('loadingOverlay');
            
            if (loginForm && loadingOverlay) {
                loginForm.addEventListener('submit', function(e) {
                    // Show loading overlay
                    loadingOverlay.classList.add('active');
                });
            }
        });
    </script>
</body>
</html>
