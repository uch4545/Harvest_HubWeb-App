@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-2xl font-bold text-yellow-700 mb-6">Admin Dashboard</h1>

<div class="grid grid-cols-2 md:grid-cols-3 gap-6">
    <!-- Farmers -->
    <div class="bg-white shadow rounded-lg p-6 text-center">
        <a asp-controller="Admin" asp-action="ManageUsers" class="block bg-white shadow rounded-lg p-6 text-center hover:bg-yellow-50 transition">
            <h2 class="text-xl font-semibold">Farmers</h2>
            <p class="text-3xl font-bold text-yellow-700">@ViewBag.TotalFarmers</p>
        </a>
    </div>

    <!-- Buyers -->
    <div class="bg-white shadow rounded-lg p-6 text-center">
        <a asp-controller="Admin" asp-action="ManageUsers" class="block bg-white shadow rounded-lg p-6 text-center hover:bg-yellow-50 transition">
            <h2 class="text-xl font-semibold">Buyers</h2>
            <p class="text-3xl font-bold text-yellow-700">@ViewBag.TotalBuyers</p>
        </a>
    </div>

    <!-- Crops -->
    <div class="bg-white shadow rounded-lg p-6 text-center">
        <a asp-controller="Admin" asp-action="ManageProducts" class="block bg-white shadow rounded-lg p-6 text-center hover:bg-yellow-50 transition">
            <h2 class="text-xl font-semibold">Crops</h2>
            <p class="text-3xl font-bold text-yellow-700">@ViewBag.TotalCrops</p>
        </a>
    </div>

    <!-- Labs -->
    <div class="bg-white shadow rounded-lg p-6 text-center">
        <a asp-controller="Admin" asp-action="ManageLabs" class="block bg-white shadow rounded-lg p-6 text-center hover:bg-yellow-50 transition">
            <h2 class="text-xl font-semibold">Labs</h2>
            <p class="text-3xl font-bold text-yellow-700">@ViewBag.TotalLabs</p>
        </a>
    </div>

    <!-- Pending Documents -->
    <div class="bg-white shadow rounded-lg p-6 text-center">
        <a asp-controller="Admin" asp-action="VerifyDocuments" class="block bg-white shadow rounded-lg p-6 text-center hover:bg-yellow-50 transition">
            <h2 class="text-xl font-semibold">Pending Docs</h2>
            <p class="text-3xl font-bold text-yellow-700">@ViewBag.PendingDocs</p>
        </a>
    </div>

    <!-- Approved Documents -->
    <div class="bg-white shadow rounded-lg p-6 text-center">
        <a asp-controller="Admin" asp-action="VerifyDocuments" class="block bg-white shadow rounded-lg p-6 text-center hover:bg-yellow-50 transition">
            <h2 class="text-xl font-semibold">Approved Docs</h2>
            <p class="text-3xl font-bold text-green-600">@ViewBag.ApprovedDocs</p>
        </a>
    </div>

    <!-- Rejected Documents -->
    <div class="bg-white shadow rounded-lg p-6 text-center">
        <a asp-controller="Admin" asp-action="VerifyDocuments" class="block bg-white shadow rounded-lg p-6 text-center hover:bg-yellow-50 transition">
            <h2 class="text-xl font-semibold">Rejected Docs</h2>
            <p class="text-3xl font-bold text-red-600">@ViewBag.RejectedDocs</p>
        </a>
    </div>
</div>
