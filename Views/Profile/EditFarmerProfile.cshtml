@model HarvestHub.WebApp.Models.Farmer
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .edit-container {
        max-width: 700px;
        margin: 0 auto;
        padding: 20px;
    }
    
    .edit-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }
    
    .edit-header {
        text-align: center;
        margin-bottom: 30px;
    }
    
    .edit-header h1 {
        color: #075e54;
        font-weight: 700;
        margin-bottom: 10px;
    }
    
    .form-group {
        margin-bottom: 25px;
    }
    
    .form-label {
        display: block;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        font-size: 0.95rem;
    }
    
    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s;
    }
    
    .form-control:focus {
        border-color: #128c7e;
        outline: none;
        box-shadow: 0 0 0 3px rgba(18, 140, 126, 0.1);
    }
    
    .profile-pic-section {
        text-align: center;
        margin-bottom: 30px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 12px;
    }
    
    .current-pic {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 15px;
        border: 4px solid #e8f5e9;
    }
    
    .file-input-wrapper {
        position: relative;
        overflow: hidden;
        display: inline-block;
    }
    
    .file-input-wrapper input[type=file] {
        position: absolute;
        left: -9999px;
    }
    
    .file-input-label {
        background: #128c7e;
        color: white;
        padding: 10px 20px;
        border-radius: 20px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .file-input-label:hover {
        background: #075e54;
    }
    
    .btn-group {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
    }
    
    .btn-save {
        background: linear-gradient(135deg, #075e54, #128c7e);
        color: white;
        padding: 12px 40px;
        border: none;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }
    
    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(7, 94, 84, 0.3);
    }
    
    .btn-cancel {
        background: #6b7280;
        color: white;
        padding: 12px 40px;
        border: none;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s;
    }
    
    .btn-cancel:hover {
        background: #4b5563;
        color: white;
    }
</style>

<div class="edit-container">
    <div class="edit-card">
        <div class="edit-header">
            <h1>‚úèÔ∏è Edit Profile</h1>
            <p style="color: #666;">Ÿæÿ±ŸàŸÅÿßÿ¶ŸÑ ŸÖ€å⁄∫ ÿ™ÿ±ŸÖ€åŸÖ ⁄©ÿ±€å⁄∫</p>
        </div>
        
        <form asp-action="UpdateFarmer" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ApplicationUserId" />
            <input type="hidden" asp-for="CNIC" />
            
            <div class="profile-pic-section">
                <h3 style="margin-bottom: 15px;">Profile Picture</h3>
                @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                {
                    <img src="@Model.ProfileImagePath" alt="Profile" class="current-pic" id="preview" />
                }
                else
                {
                    <div class="current-pic" id="preview" style="background: linear-gradient(135deg, #075e54, #128c7e); display: flex; align-items: center; justify-content: center; color: white; font-size: 2.5rem; font-weight: bold;">
                        @(Model.FullName?.Substring(0, 1).ToUpper() ?? "F")
                    </div>
                }
                <div class="file-input-wrapper">
                    <label class="file-input-label">
                        üì∑ Choose New Photo
                        <input type="file" name="profileImage" accept="image/*" onchange="previewImage(this)" />
                    </label>
                </div>
            </div>
            
            <div class="form-group">
                <label class="form-label" asp-for="FullName">üë§ Full Name</label>
                <input class="form-control" asp-for="FullName" required />
            </div>
            
            <div class="form-group">
                <label class="form-label" asp-for="Email">üìß Email</label>
                <input class="form-control" asp-for="Email" type="email" required />
            </div>
            
            <div class="form-group">
                <label class="form-label" asp-for="PhoneNumber">üì± Phone Number</label>
                <input class="form-control" asp-for="PhoneNumber" placeholder="+92 300 1234567" />
            </div>
            
            <div class="btn-group">
                <button type="submit" class="btn-save">üíæ Save Changes</button>
                <a href="@Url.Action("Index", "Profile")" class="btn-cancel">‚ùå Cancel</a>
            </div>
        </form>
    </div>
</div>

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('preview').src = e.target.result;
                document.getElementById('preview').style.background = 'none';
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
