@model IEnumerable<HarvestHub.WebApp.Models.VerificationDocument>
@{
    ViewData["Title"] = "Verify Documents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold mb-6">Verify User Documents</h1>

<table class="table-auto w-full border border-gray-300 text-sm">
    <thead class="bg-gray-100">
        <tr>
            <th class="px-3 py-2">UserId</th>
            <th class="px-3 py-2">Type</th>
            <th class="px-3 py-2">File</th>
            <th class="px-3 py-2">Status</th>
            <th class="px-3 py-2">Submitted At</th>
            <th class="px-3 py-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr class="border-b">
                <td class="px-3 py-2">@doc.UserId</td>
                <td class="px-3 py-2">@doc.DocumentType</td>
                <td class="px-3 py-2">
                    <a href="@doc.FilePath" target="_blank" class="text-blue-600 underline">View</a>
                </td>
                <td class="px-3 py-2">
                    @if (doc.Status == HarvestHub.WebApp.Models.VerificationStatus.Pending)
                    {
                        <span class="bg-yellow-500 text-white px-2 py-1 rounded">Pending</span>
                    }
                    else if (doc.Status == HarvestHub.WebApp.Models.VerificationStatus.Approved)
                    {
                        <span class="bg-green-600 text-white px-2 py-1 rounded">Approved</span>
                    }
                    else
                    {
                        <span class="bg-red-600 text-white px-2 py-1 rounded">Rejected</span>
                    }
                </td>
                <td class="px-3 py-2">@doc.SubmittedAt.ToString("g")</td>
                <td class="px-3 py-2">
                    <form asp-action="ApproveDocument" method="post" asp-route-id="@doc.Id" class="inline">
                        <button type="submit" class="bg-green-600 text-white px-3 py-1 rounded">Approve</button>
                    </form>
                    <form asp-action="RejectDocument" method="post" asp-route-id="@doc.Id" class="inline ml-2">
                        <button type="submit" class="bg-red-600 text-white px-3 py-1 rounded">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
