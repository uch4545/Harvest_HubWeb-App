@model HarvestHub.WebApp.Models.MarketRate
@{
    ViewData["Title"] = "Add New Market Rate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-6 max-w-2xl">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">‚ûï Add New Market Rate</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="Create" method="post" class="bg-white shadow rounded-lg p-6">
        @Html.AntiForgeryToken()

        <div class="mb-4">
            <label asp-for="CropName" class="block text-sm font-semibold text-gray-700 mb-2">Crop Name (English)</label>
            <input asp-for="CropName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="e.g., Wheat" />
            <span asp-validation-for="CropName" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="CropNameUrdu" class="block text-sm font-semibold text-gray-700 mb-2">Crop Name (Urdu)</label>
            <input asp-for="CropNameUrdu" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="e.g., ⁄ØŸÜÿØŸÖ" />
            <span asp-validation-for="CropNameUrdu" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="CurrentRate" class="block text-sm font-semibold text-gray-700 mb-2">Current Rate (PKR)</label>
            <input asp-for="CurrentRate" type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="e.g., 4200" />
            <span asp-validation-for="CurrentRate" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Unit" class="block text-sm font-semibold text-gray-700 mb-2">Unit</label>
            <select asp-for="Unit" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500">
                <option value="">Select Unit</option>
                <option value="Kg">Kg</option>
                <option value="40kg bag">40kg bag</option>
            </select>
            <span asp-validation-for="Unit" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex gap-4">
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg transition">
                üíæ Save Rate
            </button>
            <a asp-controller="MarketRates" asp-action="ManageRates" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition">
                ‚ùå Cancel
            </a>
        </div>
    </form>
</div>
