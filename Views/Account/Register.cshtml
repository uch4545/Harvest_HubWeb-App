@model HarvestHub.WebApp.ViewModels.FarmerRegisterViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Farmer Registration</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-50 min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">

    <div class="bg-white shadow-2xl rounded-2xl p-6 sm:p-8 md:p-10 w-full max-w-md sm:max-w-lg space-y-6">
        <h2 class="text-3xl font-extrabold text-green-700 text-center">Register as Farmer</h2>

        <form asp-controller="Farmer" asp-action="Register" method="post" novalidate class="space-y-6">
            @Html.AntiForgeryToken()

            <!-- Full Name -->
            <div>
                <label asp-for="FullName" class="block text-gray-800 font-medium mb-1">Full Name</label>
                <input asp-for="FullName" placeholder="e.g. Ali Khan"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
            </div>

            <!-- CNIC -->
            <div>
                <label asp-for="CNIC" class="block text-gray-800 font-medium mb-1">CNIC</label>
                <input asp-for="CNIC" placeholder="e.g. 35201-1234567-1"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="CNIC" class="text-red-600 text-sm"></span>
            </div>

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-gray-800 font-medium mb-1">Email</label>
                <input asp-for="Email" placeholder="e.g. abc@gmail.com"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <!-- Password -->
            <div>
                <label asp-for="Password" class="block text-gray-800 font-medium mb-1">Password</label>
                <input asp-for="Password" type="password" placeholder="6 digit password"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <!-- Submit -->
            <div>
                <button type="submit"
                        class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 rounded-lg shadow-md">
                    Register
                </button>
            </div>
        </form>

        <p class="text-sm text-center text-gray-600">
            Already have an account?
            <a asp-controller="Farmer" asp-action="Login" class="text-green-600 font-medium hover:underline">Login here</a>
        </p>
    </div>

</body>
</html>
