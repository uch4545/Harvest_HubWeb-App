@model HarvestHub.WebApp.ViewModels.ResetPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password - Harvest Hub</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-yellow-50 min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">

    <div class="bg-white shadow-2xl rounded-2xl p-6 sm:p-8 md:p-10 w-full max-w-md sm:max-w-lg space-y-6 animate-fade-in transition-all duration-500 ease-in-out">
        <h2 class="text-2xl sm:text-3xl font-extrabold text-yellow-600 text-center">
            Reset Your Password
        </h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 text-green-700 p-3 rounded-md text-center">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="ResetPassword" method="post" novalidate class="space-y-5 sm:space-y-6">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-red-600 text-sm mb-4" })

            <!-- Hidden Fields -->
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <!-- New Password -->
            <div>
                <label asp-for="NewPassword" class="block text-gray-800 font-medium mb-1">New Password</label>
                <input asp-for="NewPassword" type="password" placeholder="Enter new password"
                       class="w-full px-3 py-2 sm:py-3 border border-gray-300 rounded-lg text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-yellow-500" />
                <span asp-validation-for="NewPassword" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Confirm Password -->
            <div>
                <label asp-for="ConfirmPassword" class="block text-gray-800 font-medium mb-1">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Re-enter new password"
                       class="w-full px-3 py-2 sm:py-3 border border-gray-300 rounded-lg text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-yellow-500" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Submit Button -->
            <div>
                <button type="submit"
                        class="w-full bg-yellow-600 hover:bg-yellow-700 text-white font-semibold py-2 sm:py-3 rounded-lg transition-all duration-300 shadow-md text-sm sm:text-base">
                    Reset Password
                </button>
            </div>
        </form>

        <p class="text-sm sm:text-base text-center text-gray-600">
            Remembered your password?
            <a href="@Url.Action("Login", "Buyer")" class="text-yellow-600 font-medium hover:underline">Login here</a>
        </p>
    </div>

</body>
</html>
