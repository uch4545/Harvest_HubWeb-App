@{
    ViewData["Title"] = "Farmer Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-50 min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">

    <div class="bg-white shadow-xl rounded-2xl p-6 sm:p-8 w-full max-w-md space-y-6">
        <div class="text-center">
            <h2 class="text-3xl sm:text-2xl font-extrabold text-green-700">Farmer Login</h2>
            <p class="mt-1 text-sm text-gray-600">Login to access your dashboard</p>
        </div>

        <form method="post" asp-action="Login" class="space-y-5">
            <div>
                <label class="block text-gray-700 font-medium mb-1">Email</label>
                <input type="email" name="Email" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-green-500" />
            </div>
            <div>
                <label class="block text-gray-700 font-medium mb-1">Password</label>
                <input type="password" name="Password" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-green-500" />
                <div class="text-right mt-1">
                    <a href="@Url.Action("ForgotPassword", "Account")" class="text-sm text-green-600 hover:underline">
                        Forgot Password?
                    </a>
                </div>
            </div>
            <div>
                <button type="submit"
                        class="w-full bg-green-600 text-white py-2 rounded-lg text-sm font-semibold hover:bg-green-700 transition duration-200">
                    Login
                </button>
            </div>
        </form>

        <p class="text-center text-sm text-gray-600">
            Don't have an account?
            <a href="@Url.Action("FarmerRegister", "Account")" class="text-green-600 font-medium hover:underline">
                Register here
            </a>
        </p>
    </div>

</body>
</html>
