@model HarvestHub.WebApp.ViewModels.FarmerRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Farmer Registration</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-50 min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">

    <div class="bg-white shadow-2xl rounded-2xl p-6 sm:p-8 md:p-10 w-full max-w-md sm:max-w-lg space-y-6 animate-fade-in transition-all duration-500 ease-in-out">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-extrabold text-green-600 text-center">Register as Farmer</h2>

        <form asp-controller="Account" asp-action="FarmerRegister" method="post" novalidate class="space-y-5 sm:space-y-6">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-red-600 text-sm mb-4" })

            <!-- Full Name -->
            <div>
                <label asp-for="FullName" class="block text-gray-800 font-medium mb-1">Full Name</label>
                <input asp-for="FullName" placeholder="e.g. Ahmed Raza"
                       class="w-full px-3 py-2 sm:py-3 border border-gray-300 rounded-lg text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="FullName" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- CNIC -->
            <div>
                <label asp-for="CNIC" class="block text-gray-800 font-medium mb-1">CNIC</label>
                <input asp-for="CNIC" placeholder="e.g. 35201-1234567-1"
                       class="w-full px-3 py-2 sm:py-3 border border-gray-300 rounded-lg text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="CNIC" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Phone Number -->
            <div>
                <label asp-for="PhoneNumber" class="block text-gray-800 font-medium mb-1">Phone Number</label>
                <input asp-for="PhoneNumber" placeholder="e.g. 0301-1234567"
                       class="w-full px-3 py-2 sm:py-3 border border-gray-300 rounded-lg text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-gray-800 font-medium mb-1">Email</label>
                <input asp-for="Email" placeholder="e.g. farmer@gmail.com"
                       class="w-full px-3 py-2 sm:py-3 border border-gray-300 rounded-lg text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Email" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Password -->
            <div>
                <label asp-for="Password" class="block text-gray-800 font-medium mb-1">Password</label>
                <input asp-for="Password" type="password" placeholder="e.g. Usama@123"
                       class="w-full px-3 py-2 sm:py-3 border border-gray-300 rounded-lg text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Password" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <!-- Role Type (Hidden) -->
            <input type="hidden" asp-for="RoleType" value="Farmer" />

            <!-- Submit -->
            <div>
                <button type="submit"
                        class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 sm:py-3 rounded-lg transition-all duration-300 shadow-md text-sm sm:text-base">
                    Register
                </button>
            </div>
        </form>

        <form asp-action="VerifyOtp" method="get">
            <input type="hidden" name="email" value="@Model.Email" />
            <button type="submit"
                    class="w-full mt-3 bg-yellow-500 hover:bg-yellow-600 text-white font-medium py-2 rounded-lg transition-all duration-300 shadow-md text-sm sm:text-base">
                Go to OTP Verification
            </button>
        </form>

        <p class="text-sm sm:text-base text-center text-gray-600">
            Already have an account?
            <a href="@Url.Action("Login", "Farmer")" class="text-green-600 font-medium hover:underline">Login here</a>
        </p>
    </div>

</body>
</html>
