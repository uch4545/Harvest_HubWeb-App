    string GetCategoryIcon(string category)
    {
        return category switch
        {
            "Subsidy" => "üí∞",
            "Loan" => "üè¶",
            "Insurance" => "üõ°Ô∏è",
            "Training" => "üìö",
            "Equipment" => "üöú",
            "Seeds" => "üå±",
            "Fertilizer" => "üß™",
            _ => "üìã"
        };
    }
}
