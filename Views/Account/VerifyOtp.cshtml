@model HarvestHub.WebApp.ViewModels.VerifyOtpViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Verify OTP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-50 min-h-screen flex items-center justify-center px-4 sm:px-6">

    <div class="bg-white shadow-2xl rounded-2xl p-6 sm:p-10 w-full max-w-md space-y-6 animate-fade-in">
        <h2 class="text-2xl sm:text-3xl font-bold text-center text-green-700">Enter OTP Code</h2>

        <form asp-action="VerifyOtp" method="post" class="space-y-5">
            <input type="hidden" asp-for="Email" />

            <div>
                <label asp-for="OtpCode" class="block text-gray-800 font-medium mb-1">OTP Code</label>
                <input asp-for="OtpCode" placeholder="6-digit code"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="OtpCode" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div>
                <button type="submit"
                        class="w-full sm:w-auto bg-green-600 hover:bg-green-700 text-white font-semibold py-2 sm:py-3 px-4 rounded-lg transition-all duration-300 shadow-md text-sm sm:text-base">
                    Verify OTP
                </button>
            </div>
        </form>

        <form asp-action="ResendOtp" method="post" class="mt-3">
            <input type="hidden" name="email" value="@Model.Email" />
            <button type="submit"
                    class="w-full sm:w-auto bg-gray-200 hover:bg-gray-300 text-green-700 font-semibold py-2 sm:py-3 px-4 rounded-lg transition-all duration-300 shadow-md text-sm sm:text-base">
                Resend OTP
            </button>
        </form>

    </div>

</body>
</html>
