@model HarvestHub.WebApp.Models.GovernmentScheme
@{
    ViewData["Title"] = "Edit Government Scheme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-6 max-w-3xl">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">‚úèÔ∏è Edit Government Scheme</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="Edit" method="post" class="bg-white shadow rounded-lg p-6">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />

        <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
                <label asp-for="Title" class="block text-sm font-semibold text-gray-700 mb-2">Title (English)</label>
                <input asp-for="Title" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="TitleUrdu" class="block text-sm font-semibold text-gray-700 mb-2">Title (Urdu)</label>
                <input asp-for="TitleUrdu" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="TitleUrdu" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="Description" class="block text-sm font-semibold text-gray-700 mb-2">Description (English)</label>
            <textarea asp-for="Description" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DescriptionUrdu" class="block text-sm font-semibold text-gray-700 mb-2">Description (Urdu)</label>
            <textarea asp-for="DescriptionUrdu" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
                <label asp-for="Category" class="block text-sm font-semibold text-gray-700 mb-2">Category</label>
                <input asp-for="Category" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
            </div>
            <div>
                <label asp-for="Status" class="block text-sm font-semibold text-gray-700 mb-2">Status</label>
                <select asp-for="Status" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500">
                    <option value="Active">Active</option>
                    <option value="Upcoming">Upcoming</option>
                    <option value="Expired">Expired</option>
                </select>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="Eligibility" class="block text-sm font-semibold text-gray-700 mb-2">Eligibility</label>
            <textarea asp-for="Eligibility" rows="2" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
        </div>

        <div class="mb-4">
            <label asp-for="Benefits" class="block text-sm font-semibold text-gray-700 mb-2">Benefits</label>
            <textarea asp-for="Benefits" rows="2" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
        </div>

        <div class="mb-4">
            <label asp-for="HowToApply" class="block text-sm font-semibold text-gray-700 mb-2">How to Apply</label>
            <textarea asp-for="HowToApply" rows="2" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
        </div>

        <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
                <label asp-for="ContactInfo" class="block text-sm font-semibold text-gray-700 mb-2">Contact Info</label>
                <input asp-for="ContactInfo" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
            </div>
            <div>
                <label asp-for="OfficialLink" class="block text-sm font-semibold text-gray-700 mb-2">Official Link</label>
                <input asp-for="OfficialLink" type="url" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
            </div>
        </div>

        <div class="grid grid-cols-3 gap-4 mb-4">
            <div>
                <label asp-for="IsFeatured" class="flex items-center gap-2 cursor-pointer">
                    <input asp-for="IsFeatured" type="checkbox" class="w-5 h-5 text-green-600 rounded focus:ring-2 focus:ring-green-500" />
                    <span class="text-sm font-semibold text-gray-700">‚≠ê Featured</span>
                </label>
            </div>
            <div>
                <label asp-for="DisplayOrder" class="block text-sm font-semibold text-gray-700 mb-2">Display Order</label>
                <input asp-for="DisplayOrder" type="number" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
            </div>
        </div>

        <div class="flex gap-4">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg transition">
                üíæ Update Scheme
            </button>
            <a asp-controller="Schemes" asp-action="ManageSchemes" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition">
                ‚ùå Cancel
            </a>
        </div>
    </form>
</div>
