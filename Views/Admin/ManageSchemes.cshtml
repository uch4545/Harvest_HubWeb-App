@model List<HarvestHub.WebApp.Models.GovernmentScheme>
@{
    ViewData["Title"] = "Manage Government Schemes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-page {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }
    
    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, #075e54, #128c7e);
        color: white;
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(7, 94, 84, 0.3);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }
    
    .page-header h1 {
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .btn-add {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 12px 24px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }
    
    .btn-add:hover {
        background: white;
        color: #075e54;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
    }
    
    /* Success/Error Messages */
    .message-box {
        padding: 15px 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        border-left: 4px solid;
        font-weight: 500;
    }
    
    .message-success {
        background: #d4edda;
        color: #155724;
        border-color: #28a745;
    }
    
    .message-error {
        background: #f8d7da;
        color: #721c24;
        border-color: #dc3545;
    }
    
    /* Content Section */
    .content-section {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    /* Modern Table */
    .schemes-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }
    
    .schemes-table thead {
        background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
    }
    
    .schemes-table th {
        padding: 15px;
        text-align: left;
        font-weight: 600;
        color: #075e54;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .schemes-table th:first-child {
        border-radius: 10px 0 0 0;
    }
    
    .schemes-table th:last-child {
        border-radius: 0 10px 0 0;
    }
    
    .schemes-table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .schemes-table tbody tr:hover {
        background: #f8fffe;
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(7, 94, 84, 0.1);
    }
    
    .schemes-table td {
        padding: 15px;
        color: #333;
    }
    
    /* Scheme Title */
    .scheme-title {
        font-weight: 600;
        color: #1a1a1a;
    }
    
    /* Status Badges */
    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }
    
    .status-active {
        background: linear-gradient(135deg, #4caf50, #66bb6a);
        color: white;
    }
    
    .status-upcoming {
        background: linear-gradient(135deg, #2196f3, #42a5f5);
        color: white;
    }
    
    .status-other {
        background: linear-gradient(135deg, #9e9e9e, #bdbdbd);
        color: white;
    }
    
    .featured-badge {
        color: #f59e0b;
        font-size: 1.2rem;
    }
    
    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 8px;
    }
    
    .btn-action {
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }
    
    .btn-edit {
        background: linear-gradient(135deg, #2196f3, #42a5f5);
        color: white;
    }
    
    .btn-edit:hover {
        background: linear-gradient(135deg, #1976d2, #2196f3);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
        color: white;
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #f44336, #ef5350);
        color: white;
    }
    
    .btn-delete:hover {
        background: linear-gradient(135deg, #d32f2f, #f44336);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(244, 67, 54, 0.3);
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #666;
    }
    
    .empty-icon {
        font-size: 4rem;
        margin-bottom: 15px;
        opacity: 0.5;
    }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .admin-page {
            padding: 10px;
        }
        
        .page-header {
            padding: 20px;
        }
        
        .page-header h1 {
            font-size: 1.4rem;
        }
        
        .content-section {
            padding: 15px;
            overflow-x: auto;
        }
        
        .schemes-table {
            min-width: 800px;
        }
    }
</style>

<div class="admin-page">
    <!-- Page Header -->
    <div class="page-header">
        <h1>üèõÔ∏è Manage Government Schemes / ÿ≥ÿ±⁄©ÿßÿ±€å ÿ≥⁄©€åŸÖ€å⁄∫</h1>
        <a asp-controller="Schemes" asp-action="Create" class="btn-add">‚ûï Add New Scheme</a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="message-box message-success">
            ‚úÖ @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="message-box message-error">
            ‚ùå @TempData["ErrorMessage"]
        </div>
    }

    <!-- Content Section -->
    <div class="content-section">
        @if (Model.Any())
        {
            <table class="schemes-table">
                <thead>
                    <tr>
                        <th>Title / ÿπŸÜŸàÿßŸÜ</th>
                        <th>Category / ŸÇÿ≥ŸÖ</th>
                        <th>Status / ÿ≠€åÿ´€åÿ™</th>
                        <th>Featured</th>
                        <th>Created / ÿ™ÿßÿ±€åÿÆ</th>
                        <th>Actions / ÿßÿπŸÖÿßŸÑ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var scheme in Model)
                    {
                        <tr>
                            <td class="scheme-title">@scheme.Title</td>
                            <td style="color: #666;">@scheme.Category</td>
                            <td>
                                @if (scheme.Status == "Active")
                                {
                                    <span class="status-badge status-active">‚úÖ Active</span>
                                }
                                else if (scheme.Status == "Upcoming")
                                {
                                    <span class="status-badge status-upcoming">üîú Upcoming</span>
                                }
                                else
                                {
                                    <span class="status-badge status-other">‚è∏Ô∏è @scheme.Status</span>
                                }
                            </td>
                            <td>
                                @if (scheme.IsFeatured)
                                {
                                    <span class="featured-badge">‚≠ê Featured</span>
                                }
                                else
                                {
                                    <span style="color: #ccc;">-</span>
                                }
                            </td>
                            <td style="color: #666;">@scheme.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-controller="Schemes" asp-action="Edit" asp-route-id="@scheme.Id" class="btn-action btn-edit">
                                        ‚úèÔ∏è Edit
                                    </a>
                                    <form asp-controller="Schemes" asp-action="Delete" asp-route-id="@scheme.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this scheme?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-action btn-delete">
                                            üóëÔ∏è Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">üèõÔ∏è</div>
                <h3>No Schemes Found</h3>
                <p>⁄©Ÿàÿ¶€å ÿ≥⁄©€åŸÖ ŸÜ€Å€å⁄∫ ŸÖŸÑ€å</p>
                <a asp-controller="Schemes" asp-action="Create" class="btn-add" style="display: inline-block; margin-top: 20px;">‚ûï Add First Scheme</a>
            </div>
        }
    </div>
</div>
