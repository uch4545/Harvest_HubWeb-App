@model List<HarvestHub.WebApp.Models.FertilizerProduct>
@{
    ViewData["Title"] = "Manage Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }
    
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }
    
    .btn-primary {
        background: #128c7e;
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }
    
    .btn-primary:hover {
        background: #075e54;
        color: white;
    }
    
    .filter-section {
        background: white;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }
    
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }
    
    .product-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .product-image {
        width: 100%;
        height: 150px;
        object-fit: contain;
        border-radius: 10px;
        background: #f5f5f5;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        margin-bottom: 15px;
    }
    
    .product-name {
        font-size: 1.1rem;
        font-weight: 700;
        color: #075e54;
        margin-bottom: 8px;
    }
    
    .product-brand {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }
    
    .category-badge {
        display: inline-block;
        padding: 5px 10px;
        background: #128c7e;
        color: white;
        border-radius: 5px;
        font-size: 0.85rem;
        margin-bottom: 10px;
    }
    
    .btn-sm {
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.9rem;
        margin-right: 5px;
        display: inline-block;
    }
    
    .btn-edit {
        background: #2196F3;
        color: white;
    }
    
    .btn-delete {
        background: #f44336;
        color: white;
        border: none;
        cursor: pointer;
    }
    
    .nav-links {
        margin-bottom: 20px;
        padding: 15px;
        background: white;
        border-radius: 10px;
    }
    
    .nav-links a {
        margin-right: 15px;
        color: #128c7e;
        text-decoration: none;
        font-weight: 600;
    }
    
    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }
        
        .products-grid {
            grid-template-columns: 1fr;
        }
        
        .filter-section form {
            flex-direction: column;
        }
    }
</style>

<div class="admin-container">
    <div class="nav-links">
        <a href="@Url.Action("ManageCities")">Cities</a> |
        <a href="@Url.Action("ManageCategories")">Categories</a> |
        <a href="@Url.Action("ManageFertilizerProducts")" style="color: #075e54;">Products</a> |
        <a href="@Url.Action("ManageStores")">Stores</a>
    </div>

    <div class="page-header">
        <h2>ðŸ“¦ Manage Products / Ù¾Ø±ÙˆÚˆÚ©Ù¹Ø³ Ù…Ù†Ø¸Ù… Ú©Ø±ÛŒÚº</h2>
        <a href="@Url.Action("CreateProduct")" class="btn-primary">+ Add New Product</a>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div style="background: #4caf50; color: white; padding: 15px; border-radius: 10px; margin-bottom: 20px;">
            @TempData["SuccessMessage"]
        </div>
    }
    
    <div class="filter-section">
        <form method="get" asp-action="ManageFertilizerProducts" style="display: flex; gap: 15px; align-items: end;">
            <div style="flex: 1;">
                <label style="display: block; margin-bottom: 5px; font-weight: 600;">Filter by Category</label>
                <select name="categoryId" class="form-control" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var category in ViewBag.Categories as List<HarvestHub.WebApp.Models.FertilizerCategory>)
                    {
                        <option value="@category.Id" @@(ViewBag.SelectedCategoryId == category.Id ? "selected" : "")>
                            @category.Icon @category.Name
                        </option>
                    }
                </select>
            </div>
        </form>
    </div>
    
    @if (Model.Any())
    {
        <div class="products-grid">
            @foreach (var product in Model)
            {
                <div class="product-card">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.Name" class="product-image" style="height: auto; max-height: 150px;" />
                    }
                    else
                    {
                        <div class="product-image">@product.Category?.Icon</div>
                    }
                    
                    <div class="product-name">@product.Name</div>
                    @if (!string.IsNullOrEmpty(product.Brand))
                    {
                        <div class="product-brand">Brand: @product.Brand</div>
                    }
                    
                    <div class="category-badge">
                        @product.Category?.Icon @product.Category?.Name
                    </div>
                    
                    <div style="margin-top: 15px;">
                        <a href="@Url.Action("EditProduct", new { id = product.Id })" class="btn-sm btn-edit">Edit</a>
                        <form method="post" asp-action="DeleteProduct" asp-route-id="@product.Id" style="display: inline;" onsubmit="return confirmDelete('@product.Name');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn-sm btn-delete">Delete</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div style="background: white; padding: 60px; text-align: center; border-radius: 15px;">
            <p style="font-size: 1.2rem; color: #666;">No products found</p>
            <p style="margin-top: 15px;">
                <a href="@Url.Action("CreateProduct")" class="btn-primary">Add your first product</a>
            </p>
        </div>
    }
</div>

<script>
    function confirmDelete(productName) {
        return confirm('Are you sure you want to delete "' + productName + '"?\n\nThis will remove it from all stores.\nThis action cannot be undone.');
    }
</script>
