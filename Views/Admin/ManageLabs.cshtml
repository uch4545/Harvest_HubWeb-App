@model IEnumerable<HarvestHub.WebApp.Models.Laboratory>
@{
    ViewData["Title"] = "Manage Laboratories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-page {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }
    
    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, #075e54, #128c7e);
        color: white;
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(7, 94, 84, 0.3);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }
    
    .page-header h1 {
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .btn-add {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 12px 24px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }
    
    .btn-add:hover {
        background: white;
        color: #075e54;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
    }
    
    /* Content Section */
    .content-section {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    /* Modern Table */
    .labs-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-top: 20px;
    }
    
    .labs-table thead {
        background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
    }
    
    .labs-table th {
        padding: 15px;
        text-align: left;
        font-weight: 600;
        color: #075e54;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .labs-table th:first-child {
        border-radius: 10px 0 0 0;
    }
    
    .labs-table th:last-child {
        border-radius: 0 10px 0 0;
    }
    
    .labs-table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .labs-table tbody tr:hover {
        background: #f8fffe;
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(7, 94, 84, 0.1);
    }
    
    .labs-table td {
        padding: 15px;
        color: #333;
    }
    
    /* Lab Name Cell */
    .lab-name-cell {
        font-weight: 600;
        color: #1a1a1a;
    }
    
    .lab-website-link {
        color: #128c7e;
        text-decoration: none;
        font-size: 0.85rem;
        margin-left: 8px;
        transition: all 0.2s;
    }
    
    .lab-website-link:hover {
        color: #075e54;
        text-decoration: underline;
    }
    
    /* Status Badges */
    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
    }
    
    .status-verified {
        background: linear-gradient(135deg, #4caf50, #66bb6a);
        color: white;
    }
    
    .status-not-verified {
        background: linear-gradient(135deg, #ff6b35, #ff8c42);
        color: white;
    }
    
    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }
    
    .btn-action {
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }
    
    .btn-verify {
        background: linear-gradient(135deg, #4caf50, #66bb6a);
        color: white;
    }
    
    .btn-verify:hover {
        background: linear-gradient(135deg, #388e3c, #4caf50);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
    }
    
    .btn-edit {
        background: linear-gradient(135deg, #2196f3, #42a5f5);
        color: white;
    }
    
    .btn-edit:hover {
        background: linear-gradient(135deg, #1976d2, #2196f3);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #f44336, #ef5350);
        color: white;
    }
    
    .btn-delete:hover {
        background: linear-gradient(135deg, #d32f2f, #f44336);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(244, 67, 54, 0.3);
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #666;
    }
    
    .empty-icon {
        font-size: 4rem;
        margin-bottom: 15px;
        opacity: 0.5;
    }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .admin-page {
            padding: 10px;
        }
        
        .page-header {
            padding: 20px;
        }
        
        .page-header h1 {
            font-size: 1.4rem;
        }
        
        .content-section {
            padding: 15px;
            overflow-x: auto;
        }
        
        .labs-table {
            min-width: 900px;
        }
        
        .action-buttons {
            flex-direction: column;
        }
    }
</style>

<div class="admin-page">
    <!-- Page Header -->
    <div class="page-header">
        <h1>🔬 Manage Laboratories / لیبز کو منظم کریں</h1>
        <a asp-action="CreateLab" class="btn-add">➕ Add New Lab</a>
    </div>

    <!-- Content Section -->
    <div class="content-section">
        @if (Model != null && Model.Any())
        {
            <table class="labs-table">
                <thead>
                    <tr>
                        <th>Lab Name / لیب کا نام</th>
                        <th>License / لائسنس</th>
                        <th>Contact / رابطہ</th>
                        <th>Email</th>
                        <th>Status / حیثیت</th>
                        <th>Website</th>
                        <th>Actions / اعمال</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lab in Model)
                    {
                        <tr>
                            <td class="lab-name-cell">
                                @lab.LabName
                                @if (!string.IsNullOrEmpty(lab.WebsiteUrl))
                                {
                                    <a href="@lab.WebsiteUrl" target="_blank" class="lab-website-link">🔗 Visit</a>
                                }
                            </td>
                            <td>@lab.LicenseNumber</td>
                            <td>
                                <div>@lab.ContactPerson</div>
                                <div style="font-size: 0.85rem; color: #666;">@lab.Phone</div>
                            </td>
                            <td>@lab.Email</td>
                            <td>
                                @if (lab.IsVerified)
                                {
                                    <span class="status-badge status-verified">✓ Verified</span>
                                }
                                else
                                {
                                    <span class="status-badge status-not-verified">⏳ Pending</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(lab.WebsiteUrl))
                                {
                                    <a href="@lab.WebsiteUrl" target="_blank" class="lab-website-link">🌐 Link</a>
                                }
                                else
                                {
                                    <span style="color: #999;">N/A</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    @if (!lab.IsVerified)
                                    {
                                        <form asp-action="VerifyLab" asp-route-id="@lab.Id" method="post" class="verify-form inline" data-labname="@lab.LabName">
                                            <button type="submit" class="btn-action btn-verify">✓ Verify</button>
                                        </form>
                                    }
                                    <a asp-action="EditLab" asp-route-id="@lab.Id" class="btn-action btn-edit">✏️ Edit</a>
                                    <form asp-action="DeleteLab" asp-route-id="@lab.Id" method="post" class="delete-form inline" data-labname="@lab.LabName">
                                        <button type="submit" class="btn-action btn-delete">🗑️ Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">🔬</div>
                <h3>No Laboratories Found</h3>
                <p>کوئی لیب نہیں ملی</p>
                <a asp-action="CreateLab" class="btn-add" style="display: inline-block; margin-top: 20px;">➕ Add First Lab</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Delete Confirmation
            document.querySelectorAll(".delete-form").forEach(form => {
                form.addEventListener("submit", function (e) {
                    e.preventDefault();
                    const labName = form.getAttribute("data-labname");
                    Swal.fire({
                        title: "Delete Lab?",
                        text: `Are you sure you want to delete "${labName}"? This action cannot be undone.`,
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#d33",
                        cancelButtonColor: "#3085d6",
                        confirmButtonText: "Yes, delete it!",
                        cancelButtonText: "Cancel"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });

            // Verify Confirmation
            document.querySelectorAll(".verify-form").forEach(form => {
                form.addEventListener("submit", function (e) {
                    e.preventDefault();
                    const labName = form.getAttribute("data-labname");
                    Swal.fire({
                        title: "Verify Lab?",
                        text: `Do you want to verify "${labName}"?`,
                        icon: "question",
                        showCancelButton: true,
                        confirmButtonColor: "#16a34a",
                        cancelButtonColor: "#6b7280",
                        confirmButtonText: "Yes, verify it!",
                        cancelButtonText: "Cancel"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                });
            });
        });
    </script>
}
