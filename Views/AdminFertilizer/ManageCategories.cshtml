@model List<HarvestHub.WebApp.Models.FertilizerCategory>
@{
    ViewData["Title"] = "Manage Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }
    
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    
    .btn-primary {
        background: #128c7e;
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        text-decoration: none;
    }
    
    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }
    
    .category-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        text-align: center;
    }
    
    .category-icon {
        font-size: 3rem;
        margin-bottom: 10px;
    }
    
    .category-name {
        font-size: 1.2rem;
        font-weight: 700;
        color: #075e54;
    }
    
    .btn-sm {
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        margin: 5px;
        display: inline-block;
    }
    
    .btn-edit {
        background: #2196f3;
        color: white;
    }
    
    .btn-delete {
        background: #f44336;
        color: white;
        border: none;
        cursor: pointer;
    }
    
    .nav-links {
        margin-bottom: 20px;
        padding: 15px;
        background: white;
        border-radius: 10px;
   }
    
    .nav-links a {
        margin-right: 15px;
        color: #128c7e;
        text-decoration: none;
        font-weight: 600;
    }
    
    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }
        
        .categories-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="admin-container">
    <div class="nav-links">
        <a href="@Url.Action("ManageCities")">Cities</a> |
        <a href="@Url.Action("ManageCategories")" style="color: #075e54;">Categories</a> |
        <a href="@Url.Action("ManageFertilizerProducts")">Products</a> |
        <a href="@Url.Action("ManageStores")">Stores</a>
    </div>

    <div class="page-header">
        <h2>ðŸ“¦ Manage Categories</h2>
        <a href="@Url.Action("CreateCategory")" class="btn-primary">+ Add Category</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div style="background: #d4edda; color: #155724; padding: 15px; border-radius: 10px; margin-bottom: 20px;">
            âœ… @TempData["SuccessMessage"]
        </div>
    }

    <div class="categories-grid">
        @foreach (var category in Model)
        {
            <div class="category-card">
                <div class="category-icon">@category.Icon</div>
                <div class="category-name">@category.Name</div>
                <div style="font-size: 0.9rem; color: #666; margin: 5px 0;">@category.NameUrdu</div>
                <div style="margin-top: 15px;">
                    <a href="@Url.Action("EditCategory", new { id = category.Id })" class="btn-sm btn-edit">Edit</a>
                    <form method="post" action="@Url.Action("DeleteCategory", new { id = category.Id })" style="display: inline;" onsubmit="return confirmDelete('@category.Name');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-sm btn-delete">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function confirmDelete(categoryName) {
        return confirm('Are you sure you want to delete "' + categoryName + '"?\n\nAll products in this category will be affected.\nThis action cannot be undone.');
    }
</script>
