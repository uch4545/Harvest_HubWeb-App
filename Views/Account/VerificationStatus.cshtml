@model IEnumerable<HarvestHub.WebApp.Models.VerificationDocument>
@{
    ViewData["Title"] = "Verification Status";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>No verification documents submitted yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Document Type</th>
                <th>File</th>
                <th>Status</th>
                <th>Remarks</th>
                <th>Submitted At</th>
                <th>Reviewed At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in Model)
            {
                <tr>
                    <td>@doc.DocumentType</td>
                    <td>
                        <a href="@doc.FilePath" target="_blank">View</a>
                    </td>
                    <td>
                        @switch (doc.Status)
                        {
                            case HarvestHub.WebApp.Models.VerificationStatus.Pending:
                                <span class="badge bg-warning">Pending</span>;
                                break;
                            case HarvestHub.WebApp.Models.VerificationStatus.Approved:
                                <span class="badge bg-success">Approved</span>;
                                break;
                            case HarvestHub.WebApp.Models.VerificationStatus.Rejected:
                                <span class="badge bg-danger">Rejected</span>;
                                break;
                        }
                    </td>
                    <td>@doc.Remarks</td>
                    <td>@doc.SubmittedAt.ToString("g")</td>
                    <td>@(doc.ReviewedAt?.ToString("g") ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>
}
