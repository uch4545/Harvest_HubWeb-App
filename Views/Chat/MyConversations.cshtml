@model List<HarvestHub.WebApp.Models.Conversation>
@{
    ViewData["Title"] = "Messages";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUserId = ViewBag.CurrentUserId as string;
}

<style>
    * {
        box-sizing: border-box;
    }
    
    .chat-app-container {
        max-width: 900px;
        margin: 0 auto;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        overflow: hidden;
        min-height: 70vh;
    }
    
    .chat-header {
        background: linear-gradient(135deg, #075e54, #128c7e);
        color: white;
        padding: 20px 25px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .chat-header h2 {
        margin: 0;
        font-weight: 600;
        font-size: 1.4rem;
    }
    
    .chat-header-subtitle {
        font-size: 0.85rem;
        opacity: 0.9;
    }
    
    .conversations-list {
        max-height: 60vh;
        overflow-y: auto;
    }
    
    .conversation-item {
        display: flex;
        align-items: center;
        padding: 15px 20px;
        border-bottom: 1px solid #f0f0f0;
        cursor: pointer;
        transition: background 0.2s;
        text-decoration: none;
        color: inherit;
    }
    
    .conversation-item:hover {
        background: #f5f6f6;
    }
    
    .conversation-item.has-unread {
        background: #e8f5e9;
    }
    
    .conversation-avatar {
        width: 55px;
        height: 55px;
        border-radius: 50%;
        background: linear-gradient(135deg, #075e54, #25d366);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 1.3rem;
        margin-right: 15px;
        flex-shrink: 0;
    }
    
    .conversation-content {
        flex: 1;
        min-width: 0;
    }
    
    .conversation-name {
        font-weight: 600;
        font-size: 1rem;
        color: #1a1a1a;
        margin-bottom: 3px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .crop-badge {
        background: #e8f5e9;
        color: #2e7d32;
        padding: 2px 8px;
        border-radius: 10px;
        font-size: 0.7rem;
        font-weight: 500;
    }
    
    .conversation-preview {
        color: #667781;
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 350px;
    }
    
    .conversation-meta {
        text-align: right;
        flex-shrink: 0;
        margin-left: 10px;
    }
    
    .conversation-time {
        color: #667781;
        font-size: 0.75rem;
        margin-bottom: 5px;
    }
    
    .conversation-item.has-unread .conversation-time {
        color: #25d366;
        font-weight: 600;
    }
    
    .unread-badge {
        background: #25d366;
        color: white;
        font-size: 0.7rem;
        font-weight: bold;
        padding: 3px 8px;
        border-radius: 20px;
        display: inline-block;
    }
    
    .empty-state {
        text-align: center;
        padding: 60px 30px;
        color: #667781;
    }
    
    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }
    
    .empty-state h3 {
        color: #1a1a1a;
        margin-bottom: 10px;
    }
    
    .search-box {
        padding: 10px 15px;
        background: #f0f2f5;
    }
    
    .search-input {
        width: 100%;
        padding: 10px 20px;
        border: none;
        border-radius: 20px;
        background: white;
        font-size: 0.95rem;
        outline: none;
    }
    
    .back-btn {
        background: rgba(255,255,255,0.2);
        border: none;
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 0.9rem;
        transition: background 0.2s;
    }
    
    .back-btn:hover {
        background: rgba(255,255,255,0.3);
        color: white;
    }
    
    /* Scrollbar Styling */
    .conversations-list::-webkit-scrollbar {
        width: 6px;
    }
    
    .conversations-list::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    
    .conversations-list::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
    }
</style>

<div class="container py-4">
    <div class="chat-app-container">
        <!-- Header -->
        <div class="chat-header">
            <div>
                <h2>üí¨ Messages</h2>
                <div class="chat-header-subtitle">Ÿæ€åÿ∫ÿßŸÖÿßÿ™</div>
            </div>
        </div>

        <!-- Search -->
        <div class="search-box">
            <input type="text" class="search-input" placeholder="üîç Search conversations / ÿ™ŸÑÿßÿ¥ ⁄©ÿ±€å⁄∫..." id="searchInput" />
        </div>

        <!-- Conversations List -->
        <div class="conversations-list" id="conversationsList">
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <div class="empty-state-icon">üí¨</div>
                    <h3>No messages yet</h3>
                    <p>ÿßÿ®⁄æ€å ⁄©Ÿàÿ¶€å Ÿæ€åÿ∫ÿßŸÖÿßÿ™ ŸÜ€Å€å⁄∫</p>
                    <p class="mt-3">When someone contacts you about your crops, messages will appear here.</p>
                </div>
            }
            else
            {
                @foreach (var conv in Model)
                {
                    var otherUser = conv.BuyerId == currentUserId ? conv.Farmer : conv.Buyer;
                    var lastMessage = conv.Messages?.FirstOrDefault();
                    var unreadCount = conv.Messages?.Count(m => m.SenderId != currentUserId && !m.IsRead) ?? 0;
                    var hasUnread = unreadCount > 0;
                    var initial = otherUser?.FullName?.Substring(0, 1).ToUpper() ?? "?";
                    
                    <a href="@Url.Action("Conversation", "Chat", new { id = conv.Id })" 
                       class="conversation-item @(hasUnread ? "has-unread" : "")"
                       data-name="@(otherUser?.FullName ?? "")">
                        
                        <div class="conversation-avatar">
                            @initial
                        </div>
                        
                        <div class="conversation-content">
                            <div class="conversation-name">
                                @(otherUser?.FullName ?? otherUser?.Email ?? "Unknown")
                                @if (conv.Crop != null)
                                {
                                    <span class="crop-badge">üåæ @conv.Crop.Name</span>
                                }
                            </div>
                            <div class="conversation-preview">
                                @if (lastMessage != null)
                                {
                                    @(lastMessage.Message.Length > 45 ? lastMessage.Message.Substring(0, 45) + "..." : lastMessage.Message)
                                }
                                else
                                {
                                    <span style="opacity: 0.6;">No messages yet</span>
                                }
                            </div>
                        </div>
                        
                        <div class="conversation-meta">
                            <div class="conversation-time">
                                @conv.LastMessageAt.ToString("MMM dd")
                                <br/>
                                @conv.LastMessageAt.ToString("HH:mm")
                            </div>
                            @if (hasUnread)
                            {
                                <span class="unread-badge">@unreadCount</span>
                            }
                        </div>
                    </a>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const items = document.querySelectorAll('.conversation-item');
            
            items.forEach(item => {
                const name = item.dataset.name?.toLowerCase() || '';
                item.style.display = name.includes(searchTerm) ? 'flex' : 'none';
            });
        });
    </script>
}
