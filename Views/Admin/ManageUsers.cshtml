@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var farmers = ViewBag.Farmers as List<HarvestHub.WebApp.Models.Farmer>;
    var buyers = ViewBag.Buyers as List<HarvestHub.WebApp.Models.Buyer>;
}

<h1 class="text-2xl font-bold mb-6">Manage Users</h1>

<div class="grid grid-cols-2 gap-6">
    <!-- Farmers -->
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Farmers</h2>
        <table class="table-auto w-full border border-gray-300 text-sm">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-3 py-2">Name</th>
                    <th class="px-3 py-2">Email</th>
                    <th class="px-3 py-2">Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in farmers)
                {
                    <tr class="border-b">
                        <td class="px-3 py-2">@f.FullName</td>
                        <td class="px-3 py-2">@f.Email</td>
                        <td class="px-3 py-2">@f.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Buyers -->
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-4">Buyers</h2>
        <table class="table-auto w-full border border-gray-300 text-sm">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-3 py-2">Name</th>
                    <th class="px-3 py-2">Email</th>
                    <th class="px-3 py-2">Phone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in buyers)
                {
                    <tr class="border-b">
                        <td class="px-3 py-2">@b.FullName</td>
                        <td class="px-3 py-2">@b.Email</td>
                        <td class="px-3 py-2">@b.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
