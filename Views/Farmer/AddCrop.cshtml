@model HarvestHub.WebApp.Models.Crop
@{
    ViewData["Title"] = "Add New Crop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-2xl font-bold text-yellow-700 mb-6">Add New Crop</h2>

<form asp-action="AddCrop" method="post" enctype="multipart/form-data"
      class="space-y-4 bg-white p-6 rounded shadow-md">

    <div>
        <label asp-for="Name" class="block font-semibold">Crop Name</label>
        <input asp-for="Name" class="w-full border px-3 py-2 rounded" />
    </div>

    <div>
        <label asp-for="Variety" class="block font-semibold">Variety</label>
        <select asp-for="Variety"
                asp-items="Html.GetEnumSelectList<HarvestHub.WebApp.Models.CropVariety>()"
                class="w-full border px-3 py-2 rounded">
            <option value="">-- Select Variety --</option>
        </select>
    </div>

    <div class="grid grid-cols-2 gap-4">
        <div>
            <label asp-for="Quantity" class="block font-semibold">Quantity</label>
            <input asp-for="Quantity" class="w-full border px-3 py-2 rounded" />
        </div>
        <div>
            <label asp-for="Unit" class="block font-semibold">Unit</label>
            <select asp-for="Unit" class="w-full border px-3 py-2 rounded">
                <option value="Kg">Kg</option>
                <option value="Ton">Ton</option>
                <option value="Bag">Bag</option>
            </select>
        </div>
    </div>

    <div>
        <label asp-for="PricePerUnit" class="block font-semibold">Price Per Unit</label>
        <input asp-for="PricePerUnit" class="w-full border px-3 py-2 rounded" />
    </div>

    <div>
        <label asp-for="Description" class="block font-semibold">Description</label>
        <textarea asp-for="Description" class="w-full border px-3 py-2 rounded" rows="3"></textarea>
    </div>

    <!-- ✅ Multiple Images -->
    <div>
        <label class="block font-semibold">Upload Crop Images</label>
        <input type="file" name="images" multiple class="w-full border px-3 py-2 rounded" />
    </div>

    <!-- ✅ Lab Selection -->
    <div>
        <label class="block font-semibold">Select Laboratory</label>
        <select name="laboratoryId" class="w-full border px-3 py-2 rounded"
                asp-items="@(new SelectList(ViewBag.Labs, "Id", "LabName"))">
            <option value="">-- Select Laboratory --</option>
        </select>
    </div>

    <!-- ✅ Report File -->
    <div>
        <label class="block font-semibold">Upload Lab Report</label>
        <input type="file" name="reportFile" class="w-full border px-3 py-2 rounded" />
    </div>

    <button type="submit" class="bg-yellow-700 text-white px-4 py-2 rounded">
        Save Crop
    </button>
</form>
